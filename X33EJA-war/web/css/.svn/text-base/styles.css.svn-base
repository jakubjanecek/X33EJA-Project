body {
    margin: 0;
    padding: 0;
    background-color: #fff;
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: .9em;
}

#header {
    border-bottom: 1px #036 solid;
    height: 150px;
    clear: both;
}

#headerLeft {
    width: 20%;
    float: left;
    text-align: center;
}

#headerRight {
    width: 80%;
    margin-left: 20%;
    text-align: left;
}

#logo {
    width: 159px;
    height: 135px;
    float: left;
    position: relative;
    overflow: hidden;
    margin: 0 0 0 25px;
}

#logo span {
    display: block;
    width: 100%;
    height: 135px;
    margin: 0;
    padding: 0;
    position: absolute;
    top: 0;
    left: 0;
    background: url(../img/logo.png) top left no-repeat;
}

#logoutMenu {
    float: right;
    margin: 0 20px 0 0;
}

#logoutMenu ul {
    list-style-type: none;
}

#logoutMenu ul li {
    display: inline;
    margin-left: .5em;
}

#menu {
    list-style-type: none;
    margin: 2em 0 0 0;
}

#menu li {
    display: inline;
    margin-right: 1em;
}

.padding {
    padding: 1em 2em;
}

h1 {
    margin: .5em 0 .8em 0;
    font-size: 2em;
}

h2 {
    font-size: 1.5em;
    margin: 0 0 .6em .5em;
}

h3 {
    font-size: 1.3em;
    margin: 0 0 .5em 0;
}

h4 {
    font-size: 1.1em;
    margin: .5em 0 .4em 0;
}

p {
    margin: 1em .5em;
    line-height: 1.4em;
}

a {
    color: #900;
    text-decoration: underline;
}

a:hover, a:visited:hover {
    color: #009;
    text-decoration: none;
}

a:visited {
    color: #009;
}

.infoMsg {
    font-weight: bold;
    color: #2a2;
    margin: 1em .5em;
}

.error {
    color:red;
}